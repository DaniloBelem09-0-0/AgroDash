{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    
    "types": ["node"], // Isso corrige erros como 'process' not found

    "sourceMap": true,
    "declaration": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    "esModuleInterop": true,
    "verbatimModuleSyntax": false 
  },
  
  // --- ADICIONE ISTO AQUI PARA O NODEMON FUNCIONAR ---
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}