{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    
    "types": ["jest","node"], 

    "sourceMap": true,
    "declaration": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    
    // CORREÇÃO 1: Necessário quando se usa module: nodenext
    "isolatedModules": true
  },
  
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}