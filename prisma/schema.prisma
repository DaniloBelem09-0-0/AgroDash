generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // @db.Uuid diz ao Postgres para usar o tipo nativo UUID (mais eficiente)
  id        String   @id @db.Uuid
  name      String
  email     String   @unique
  password  String
  role      String   @default("producer")
  createdAt DateTime @default(now())

  sensors   Sensor[]

  @@map("users")
}

model Sensor {
  id        String   @id @db.Uuid
  name      String
  lat       Float
  lon       Float
  active    Boolean  @default(true)
  
  userId    String   @db.Uuid // A chave estrangeira também tem que ser UUID
  user      User     @relation(fields: [userId], references: [id])

  readings  SensorReading[]

  @@map("sensors")
}

model SensorReading {
  // CORREÇÃO: Adicionado @db.Uuid para garantir compatibilidade com o tipo nativo
  id        String   @id @default(uuid()) @db.Uuid
  value     Float
  type      String
  readAt    DateTime @default(now())
  
  // CORREÇÃO: Adicionado @db.Uuid aqui também. 
  // Sem isso, o Prisma cria como 'text' e o banco rejeita a FK com 'Sensor.id' (que é uuid)
  sensorId  String   @db.Uuid
  sensor    Sensor   @relation(fields: [sensorId], references: [id])

  @@map("sensor_readings")
}
